---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
permalink: "/tags/{{ tag | slug }}/index.html"
---

<h1>Posts tagged “{{ tag }}”</h1>
<ul>
  {% for post in collections[tag] %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      {% if post.date %}
        <span>({{ post.date | dateSafe("d MMM, yyyy") }})</span>
      {% endif %}
    </li>
  {% endfor %}
</ul>
